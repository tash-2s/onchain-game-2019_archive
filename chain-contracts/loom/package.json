{
  "private": true,
  "license": "UNLICENSED",
  "name": "loom",
  "version": "0.0.0",
  "scripts": {
    "loom": "./loom",
    "lint": "prettier '{*.js,migrations/**/*,scripts/**/*,contracts/**/*,test/**/*}' --write && solium -d contracts/ --fix",
    "generate-ts-types": "truffle compile && typechain --target truffle './build/**/*.json'",
    "test": "yarn generate-ts-types && tsc --noEmit && TS_NODE_FILES=true truffle test"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "*",
    "ethlint": "*",
    "loom-truffle-provider": "*",
    "prettier": "*",
    "prettier-plugin-solidity": "1.0.0-alpha.34",
    "truffle": "*",
    "truffle-contract": "*",
    "truffle-deploy-registry": "*",
    "truffle-security": "*",
    "truffle-typings": "*",
    "ts-node": "*",
    "typechain": "*",
    "typescript": "*"
  }
}
